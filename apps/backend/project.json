{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/backend/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      },
      "dependsOn": ["nx run backend:migration:compile", "nx run backend:build"]
    },
    "typeorm": {
      "command": "node --require ts-node/register ./node_modules/typeorm/cli.js"
    },
    "typeorm:config": {
      "command": "node --require ts-node/register ./node_modules/typeorm/cli.js -- -d ./apps/backend/libs/providers/src/typeorm/typeorm-migrations.config.ts"
    },
    "migration:run": {
      "command": "nx run backend:migration:compile && nx run backend:typeorm:config migration:run"
    },
    "migration:generate": {
      "command": "nx run backend:build --tsc && cross-env nx run backend:typeorm:config migration:generate ./apps/backend/migrations/%npm_config_name%_migration"
    },
    "migration:compile": {
      "command": "tsc -p ./apps/backend/migrations/tsconfig.migration.json"
    },
    "migration:create": {
      "command": "cross-env npm run typeorm migration:create ./apps/backend/migrations/%npm_config_name%_migration"
    },
    "migration:revert": {
      "command": "nx run backend:typeorm:config migration:revert"
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
